<% provide(:title, 'Rejestracja') %>

 <div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :hasło %>
      <%= f.password_field :password %>

      <%= f.label :powtórz_hasło %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Utwórz konto", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>